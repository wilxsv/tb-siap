<html>
    <head>
        <style>
            table {
                border: 1px dashed #000; 
                font-size:11px;
                border-collapse: separate;
                border-spacing: 1px 0px;
            }
            .td-enca {
                text-align:center; 
                font-size:10px;
            }
            label{
                font-weight: bold;
            }
            td {
               padding-left: 2px;
            }
            .td-medicamento{
                border-bottom:  1px solid black;
                border-top:   1px solid black;
            }
            .td-medicamento-detalle{
                border-bottom:  1px solid black;
            }
            </style>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    </head>
    <body onload="subst()">
    {% set i = 1 %}
    {% set twoxpage = 1 %}
    {% set aux = '' %}
    {% for cuantamedicina in objReceta %} 
        
    {% if aux != cuantamedicina.med.getIdmedicina %}
    {% set aux = cuantamedicina.med.getIdmedicina %}
    {% set i = 1 %}
    {% endif %}
   

    <table width="50%" style="float: left;" border='0'>
        <tr>
            
            <td class ="td-enca" colspan="4">
            <b>
                <br/>
                {{ '#'~cuantamedicina.med.getIdreceta().numeroreceta }}
                {{ cuantamedicina.med.getIdreceta().getIdestado()|trim is sameas('R') ? 'RECETA DEL DIA' : '<<'~'RECETA REPETITIVA'~'>>' }}
                {{ i~'/'~cuantamedicina.cuantos }}<br/>
                {{idhistorialclinico.getIdEstablecimiento.nombre}}
                {{idhistorialclinico.getIdEstablecimiento.getIdMunicipio.nombre}}
                <br/>Receta de Dispensaci&oacute;n a Paciente Consulta Externa<br/>
                Medicamento se despachara: {{ cuantamedicina.med.getIdEstablecimientoDespacha() }}
            </b>
            </td>
           
        </tr>
        <tr>               
            <td style="font-size: 11px" colspan="2"><label>No Expediente: </label><b>{{expediente.numero}}</b></td>
            <td style="font-size: 11px" colspan="2"><label>Fecha Entrega: </label><b>{{ cuantamedicina.med.getIdreceta().fecha|date('d-m-Y') }}</b></td>
        <tr>
            <td colspan="4" style="font-size: 11px"><label>Horario:</label></td>
        </tr>
        <tr>
            <td><label>Paciente:</label> </td>
            <td colspan="3"> {{expediente.getIdPaciente().primerApellido}} {{expediente.getIdPaciente().segundoApellido}} {{expediente.getIdPaciente().apellidoCasada}}, {{expediente.getIdPaciente().primerNombre}} {{expediente.getIdPaciente().segundoNombre}} {{expediente.getIdPaciente().tercerNombre}}   </td>
        </tr>
        <tr>    
            <td style="width: 25%"><label>Procedencia: </label>{{expediente.getIdPaciente().areaGeograficaDomicilio}} 
            <td colspan="2"><label>Edad: </label>{{edad}}</td>
            <td><label>Sexo: </label>{{expediente.getIdPaciente().idSexo}}</td>
        </tr>
        <tr>
            <td ><label>Fecha consulta:</label></td>
            <td colspan="3">{{idhistorialclinico.fechaconsulta|date('d-m-Y')}}</td>
        </tr>
        <tr>
            <td class="td-medicamento" style="border-right:  1px solid black;"><label>Medicamento</label> </td>
            <td class="td-medicamento" style="border-right:  1px solid black;" colspan="2"><label>Dosis:</label></td> 
            <td class="td-medicamento" align = "center"><label>Cantidad:</label></td> 
       </tr>
        <tr>
            <td class="td-medicamento-detalle" style="border-right:  1px solid black;font-size: 9px;">{{ cuantamedicina.med.getIdmedicina().nombre}}, {{cuantamedicina.med.getIdmedicina().concentracion}}</td>
            <td class="td-medicamento-detalle" style="border-right:  1px solid black;font-size: 9px;" colspan="2">{{ cuantamedicina.med.dosis }}</td> 
            <td class="td-medicamento-detalle" style="font-size: 9px;" align = "center">{{ cuantamedicina.med.totalMedicamento }}</td> 
        </tr>
        <tr><td colspan="3"><br/><br/></td></tr>
        <tr>
            {% set codeqr =  idhistorialclinico.getIdEmpleado.nombreempleado~'\n J.V.P.M  No. '~ (idhistorialclinico.getIdEmpleado.numeroJuntaVigilancia is not null ? idhistorialclinico.getIdEmpleado.numeroJuntaVigilancia : '-') ~'\n'~ idhistorialclinico.idAtenAreaModEstab.getNombreConsulta()%}
            <td ><img src="{{ qrcode_data_uri(''~codeqr, size=500, padding=10) }}" height = '60px'/></td> 
            <td><br/>{{ idhistorialclinico.getIdEmpleado.nombreempleado }}</td> 
            <td  align = "center"><br/><label>{{ idhistorialclinico.idAtenAreaModEstab.getNombreConsulta() }}</label></td>            
        </tr>
         <tr>
            <td colspan="4" style="font-size:9px;">
                Nota: Farmacia dispensara en base a la dosis, hasta un maximo de 30 d√≠as.
            </td> 
        </tr>
        <tr>
            <td style="text-align: center"><br/><br/><label>________________<br/>Cantidad Despachada</label> </td>
            <td colspan="2" style="text-align: center"><br/><br/><label>___________________<br/>Auxiliar de Farmacia</label> </td>
            <td style="text-align: center"><br/><br/><label>___________________<br/>Sello de despacho</label> </td> 
        </tr>
    </table>
    
    {% set i = i+1 %}
    {% set twoxpage = twoxpage+1 %}
    
    {% if twoxpage >4 %}
        <br>
         <p style="page-break-after: always;"></p>
        {% set twoxpage = 1 %}
    {% endif %}
    {% endfor %}
    </body>
</html>
