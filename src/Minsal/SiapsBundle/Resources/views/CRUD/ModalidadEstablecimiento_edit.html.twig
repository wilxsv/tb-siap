{% extends 'SonataAdminBundle:CRUD:edit.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}        
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/minsalsiaps/js/CRUD/base_edit.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var dPoseeBodega = $('div[id$="_poseeBodega"]');
            var ePoseeBodega = $('input[id$="_poseeBodega"]');
            var eTieneFarmacia = $('input[id$="_tieneFarmacia"]');

            if (eTieneFarmacia.prop('checked')) {
                dPoseeBodega.show();
            } else {
                dPoseeBodega.hide();
            }


            eTieneFarmacia.on('ifChecked', function () {
                dPoseeBodega.show();
            });
            eTieneFarmacia.on('ifUnchecked', function () {
                dPoseeBodega.hide();
                ePoseeBodega.iCheck('uncheck');
            });
        });
    </script>

{% endblock %}

