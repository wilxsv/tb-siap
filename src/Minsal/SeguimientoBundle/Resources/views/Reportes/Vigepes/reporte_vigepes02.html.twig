<html>
    <head>
        <meta http-equiv="Content-Style-Type" content="text/css">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        {% include 'MinsalSiapsBundle::standard_css_reportes.html.twig' %}
        <link href="{{ app.request.schemeAndHttpHost ~ asset('bundles/minsalsiaps/css/MntPacienteAdmin/encabezado_paciente.css') }}" type="text/css" rel="stylesheet">
        <style type="text/css">

            html,body {overflow: visible !important; color: black !important; border-style: none !important; border-color:black !important;font-size: 12px!important;}
            div .table-responsive {overflow: visible !important; border-style: none !important}

            .panel{ margin: 8px;}
            .panel-info > .panel-heading,.titulo_vista {
                background-color: white;
                font-size: 12px;
                border-color: black;
                color: black;
                font-weight: bold;
                border-style: none !important;
                padding: 2px 5px;
            }
            #div-border { 
            border-left: 1px dashed #000; 
            width:1px; 
            height:720px; 
            float: left;
            position: relative;
            }
            #scissors {
                position:absolute;
                top:100%;
                right: 50%;
                font-size: 20px;

                -moz-transform:    translate(9px,0px) rotate(-90deg);
                -webkit-transform: translate(9px,0px) rotate(-90deg);
                -o-transform:      translate(9px,0px) rotate(-90deg);
                -ms-transform:     translate(9px,0px) rotate(-90deg);
                transform:         translate(9px,0px) rotate(-90deg);
            }
            
            table{font-size: 7px!important;}
            .panel-body, .vista_paciente{font-size: 10px; border-style: none !important;}
            td,th {padding: 6px 5px;}
            .panel-info{border-color:black}
            table {width: 100%}

        </style>
    </head>
    <body>
    {% set cuantos = 1 %}
    {% set hojas = cuantos/2 %}
    {% for i in 1..cuantos %}
    {% set hojas = hojas-1 %}
    <!-- Si se quiere que se imprima en caso de ser impar solo una hoja el primer if se pone con valor de 0 y se quitan los comentarios del segundo if-->
    {% if hojas >= -0.5 %}
        <!--BLOQUE UNO: Ya que son dos paginas por hoja se manda a llamar dos veces a la plantilla que contiene la tabla UNO-->
        <div style="width: 50%; float: left;">{% include 'MinsalSeguimientoBundle:Reportes/Vigepes:vigepes02_tabla1.html.twig' %}</div> 
        <div id="div-border"><span id="scissors" class="fa fa-scissors"></span></div> <!--Linea Vertical que separa las hojas-->
        <div style="width: 50%;float: right">{% include 'MinsalSeguimientoBundle:Reportes/Vigepes:vigepes02_tabla1.html.twig' %}</div>
        <!--FIN BLOQUE UNO-->
        <p style="page-break-after: always;clear: left;" ></p><!--Salto de pagina-->
        
        <!--BLOQUE DOS: Ya que son dos paginas por hoja se manda a llamar dos veces a la plantilla que contiene la tabla DOS-->
        <div style="width: 50%;float: left;">{% include 'MinsalSeguimientoBundle:Reportes/Vigepes:vigepes02_tabla2.html.twig' %}</div>
        <div style="width: 50%;float: right;">{% include 'MinsalSeguimientoBundle:Reportes/Vigepes:vigepes02_tabla2.html.twig' %}</div>  
        <!--FIN BLOQUE DOS-->
        
        <p style="page-break-after: always;clear: left;" ></p><!--Salto de pagina-->
    {% endif %}
    
    {% if hojas == -0.5 %}
        <!--<div style="width: 50%;">
            {% include 'MinsalSeguimientoBundle:Reportes/Vigepes:vigepes02_tabla1.html.twig' %}
        </div> 
        <p style="page-break-after: always;" ></p>
        
        <div style="width: 50%;">
            {% include 'MinsalSeguimientoBundle:Reportes/Vigepes:vigepes02_tabla2.html.twig' %}
        </div> --> 
    {% endif %}
    {% endfor %}
    </body>
</html>
