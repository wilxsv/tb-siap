{% if impresion != true%}
<div class="panel panel-info">
    <div class="panel-heading"><b>Consejería</b> {# Se imprime el nombre de la Seccion #}
    </div>
    <div class="table-responsive" style="overflow-x: auto;">
        <table class="{% if impresion != true %} table table-hover {% endif %} table-bordered">
            <tbody>
                {% if params.consejeriaBrindada %}
                <tr>
                    <td colspan="4" style="text-align: center;">
                        {% for consejo in params.consejeriaBrindada %}
                        <blockquote class="" style="text-align: left; font-size: 15px; padding-left: 10px; border-left: 5px solid #D8EAF0 !important; border: 1px solid #F2F2F2;">
                            <p class="text-{% if consejo.getIdTipoConsejeria().getId() == 1  %}success{% elseif consejo.getIdTipoConsejeria().getId() == 2 %}primary{% else %}info{% endif %}"><b>{{ consejo.getIdTipoConsejeria().getNombre() }},</b></p>
                            {{ consejo.getConsejo() }}
                            <small>Brindada por: {{ consejo.getIdEmpleado() }}</small>
                        </blockquote>
                        {% endfor %}
                    </td>
                </tr>
                {% else %}
                <tr class="sonata-ba-view-container">
                    <td><span>
                        <p class="text-muted">No hay registros para mostrar.</p>
                    </span></td>
                </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
</div>
{% else %}
    {% if params.consejeriaBrindada %}
        <div class="panel panel-info">
            <div class="panel-heading"><b >Consejería</b> {# Se imprime el nombre de la Seccion #}
            </div>
            <div class="table-responsive" style="overflow-x: auto;">
                <table class="{% if impresion != true %} table table-hover {% endif %} table-bordered">
                    <thead>
                        <tr>
                            <th>Tipo de Consejeria</th>
                            <th colspan="2">Consejo</th>
                            <th>Brindado por</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for consejo in params.consejeriaBrindada %}
                            <tr>
                                <td>{{ consejo.getIdTipoConsejeria().getNombre() }}</td>
                                <td  colspan="2">{{ consejo.getConsejo() }}</td>
                                <td><small>{{ consejo.getIdEmpleado() }}</small></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
{% endif %}
